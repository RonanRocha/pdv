<UserControl x:Class="EmissorNF.Cliente.Telas.Caixa.Controles.UCWindowActions"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EmissorNF.Cliente.Telas.Caixa.Controles" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" >

    <Grid>
        <StackPanel  Orientation="Horizontal" HorizontalAlignment="Center" >
            <Button x:Name="ButtonMinimize" Margin="0,0,10,0"  Cursor="Hand">
                <materialDesign:PackIcon  Kind="WindowMinimize" />
            </Button>
            <Button x:Name="ButtonMaximize" Margin="0,0,10,0"  Cursor="Hand">
                <materialDesign:PackIcon  Kind="WindowMaximize" />
            </Button>
            <Button x:Name="ButtonClose"  Cursor="Hand">
                <materialDesign:PackIcon  Kind="Close" />
            </Button>
        </StackPanel>
    </Grid>
      
    
</UserControl>
